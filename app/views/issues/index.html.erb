<% if user_signed_in? %>
<% if current_user.admin? %>
<script type="text/javascript">window.location.href = "/admin_issue_index"</script>
<% else %>
<div class="hospital_overview_header_out">
	<div class="hospital_overview_header_in">
				<div id="page_header">
			<p id="page_header_title">Potential Issues</p>
		<h3 id="page_header_subtitle">Click any issues that apply to your hospital. Active issues will be lit red and viewable by your administrator.</h3>
		</div>
    <% @issues.each do |issue| %>
<table class="issue_table">

  <tbody>

      <tr>
        			 <% if issue.status == false%>
				<td class="issue_change_status" id="issue_change"><a href='/issues/<%= issue.id %>/status_change'><%= issue.title %></a></td> 
						<% else %>
					<td class="issue_change_status_red" id="issue_change"><a href='/issues/<%= issue.id %>/status_change'><%= issue.title %></a></td>
						<% end %> 
      </tr>

  </tbody>
</table>
      <% end %>
</div>
</div>
<% end %>
<% end %>