<% if user_signed_in? %>
<% if current_user.admin? %>
<script type="text/javascript">window.location.href = "/admin_view"</script>
<% else %>
<div class="hospital_overview_header_out">
	<div class="hospital_overview_header_in">
		<div id="hospital_progress_outer">
			<div id="hospital_progress_inner" style="width: <%= number_to_percentage(@progress_bar) %>"></div>
		</div>

		<% @tasks.each do |task| %>
		<% @task_ids = task.id %>
		<% if task.user == current_user %>
		<% if task.status == true%>
		<table class="task_list">
			<% else %>
			<table class="task_list_red">
				<% end %>
				<tbody>
					<tr class="task_row">
						<td class="step"><%= task.position %></td>
						<td class="task_title" id="title_<%= @task_ids %>"><%= task.title %><p class="click_for_more"><i>more >></i></p></td>
						<% if task.status == true%>
			<!--		<td class="change_status"><a href='/tasks/<%= task.id %>/status_change'>Complete!</a></td> --> 
					<td class="change_status" id="status_<%= @task_ids %>"><%= link_to 'Complete!', status_change_task_path(task.id) %></td>
						<% else %>
				<!--		<td class="change_status_red"><a href='/tasks/<%= task.id %>/status_change'>Click to Complete</a></td> -->
					<td class="change_status_red" id="status_<%= @task_ids %>"><%= link_to 'Click to Complete', status_change_task_path(task.id) %></td>
						<% end %>
					</tr>
	</div>
	
	
	</tbody>

	</table>
			<div class= "task_description" id="description_<%= @task_ids %>">
						<p class="description_inside"><%= auto_link(simple_format(task.description)) %></p>
					</div>
					<script>
					
					$("#title_<%= @task_ids %>").click(function () {
   					 $("#description_<%= @task_ids %>").toggleClass("open");
						});

					</script>
					<% end %>
					<% end %>
	<br>
	<% end %>
	<% end %>
</div>
</div>