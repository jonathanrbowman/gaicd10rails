<div id="form_outer_wrapper">
	<h2 style="text-align:center;">Add a New Task</h2>
<%= form_for @task do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<br />
  <div>
  	<h2 id="position_field_label">Step: </h2>
    <% @next_task = (Task.where('t_parent = ?', current_user.u_parent).pluck(:position).uniq.count.to_i + 1) %>
    <%= f.number_field :position, class: "field_input_position", :value =>  @next_task %>
  </div>
  <br />
  <div>
    <%= f.text_field :title, class: "field_input_general", :placeholder => 'Task Title', :autofocus => true %>
  </div>
  <br />
  <div>
    <%= f.text_area :description, class: "field_input_general", :placeholder => 'Task Description' %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit "Create Task", class: "add_task_btn" %>
    <%= link_to 'Back', admin_task_overview_path, class: "back_btn", data: { confirm: 'All unsaved data will be lost - are you sure?' } %>
  </div>
<% end %>

</div>
</div>

