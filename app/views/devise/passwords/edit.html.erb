<% unless user_signed_in? %>
<div id="sign_in_wrapper">
<div class="inner_content">
	<div id="login_box_wrapper">
		<p class="heading">
			<img id="login_logo" src="https://s3.amazonaws.com/gaicd10rails/icd10logogrey.png" />
		</p>
		<div id="login_box">
<div id="login_fields">
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
			<div>
				<%= f.label "Enter your new password", class: "field_label" %>
				<%= f.password_field :password, class: "field_input", :autofocus => true %>
			</div>
<br />
			<div>
				<%= f.label "One more time to confirm", class: "field_label" %>
				<%= f.password_field :password_confirmation, class: "field_input" %>
			</div>
<br />
			</div>
			<div>
				<%= f.submit "Reset Password", class: "submit_btn" %>
			</div>
			<div>
				<%= link_to "Cancel", new_user_session_path, class: "cancel_btn" %>
			</div>
			<% end %>
		</div>
	</div>
</div>
</div>
<br />
<% else %>
<script type="text/javascript">window.location.href = "/"</script>
<% end %>