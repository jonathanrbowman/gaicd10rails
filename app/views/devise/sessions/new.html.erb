<% unless user_signed_in? %>
<div id="sign_in_wrapper">
<div class="inner_content">
	<div id="login_box_wrapper">
		<p class="heading">
			ICD-10 Task Manager
		</p>
		<div id="login_box">
<div id="login_fields">
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			<div>
				<%= f.label :email, class: "field_label" %>
				<br />
				<%= f.email_field :email, class: "field_input", :autofocus => true %>
			</div>
<br />
			<div>
				<%= f.label :password, class: "field_label" %>
				<br />
				<%= f.password_field :password, class: "field_input" %>
			</div>
			</div>
			<div>
				<%= f.submit "Sign in", class: "submit_btn" %>
			</div>
			<% end %>
			<div>
			<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Recover Password", new_password_path(resource_name), class: "cancel_btn" %><br />
<% end -%>
</div>
			
		</div>
	</div>
</div>
</div>
<br />
<% else %>
<script type="text/javascript">window.location.href = "/"</script>
<% end %>
